<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/QuestionActivity_buttonStroke" />
            <gradient android:angle="-90" android:startColor="@color/QuestionActivity_buttonColorTo" android:endColor="@color/QuestionActivity_buttonColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/QuestionActivity_buttonStroke" />
            <solid android:color="@color/QuestionActivity_buttonColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/QuestionActivity_buttonStroke" />
            <gradient android:angle="-90" android:startColor="@color/QuestionActivity_buttonColor" android:endColor="@color/QuestionActivity_buttonColorTo"  />
        </shape>
    </item>
</selector>