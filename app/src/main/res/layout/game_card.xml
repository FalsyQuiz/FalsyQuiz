<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/codeCard_cornerRadius"
    android:layout_margin="@dimen/gameCard_margin_All"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/gameCard_paddingAll">

        <TextView
            android:id="@+id/gameCard_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gameCard_num_of_questions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameCard_result_text"/>

        <ImageView
            android:id="@+id/gameCard_phoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_call_black_48dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/gameCard_fiftyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_shortcut_5050"
            android:layout_toLeftOf="@id/gameCard_phoneIcon"/>

        <ImageView
            android:id="@+id/gameCard_surpriseIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_insert_emoticon_black_48dp"
            android:layout_toLeftOf="@id/gameCard_fiftyIcon"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>